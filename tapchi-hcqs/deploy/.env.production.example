# Database Configuration
DATABASE_URL="postgresql://postgres:your_secure_password@postgres:5432/tapchi_hcqs?schema=public"
POSTGRES_DB=tapchi_hcqs
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password

# JWT Configuration
JWT_SECRET=your_very_long_random_jwt_secret_min_32_chars
JWT_REFRESH_SECRET=your_very_long_random_refresh_secret_min_32_chars

# AWS S3 Configuration
AWS_REGION=ap-southeast-1
